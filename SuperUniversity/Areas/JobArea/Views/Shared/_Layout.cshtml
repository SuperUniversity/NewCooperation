<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <style>
        #footer1 {
            position: fixed;
            bottom: 0px;
            width: 100%;
        }

        #ad {
            width: 70%;
            height: 150px;
        }

        #adarea {
            background-color: burlywood;
            text-align: center;
        }
    </style>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    @*<link href="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-freelancer/3.3.7/css/freelancer.min.css" rel="stylesheet">*@
    @*<link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">*@
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @RenderSection("styles", false)

</head>
<body>
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom" style="background-color:#2c3e50">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> 目錄 <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="#page-top" style="color:white">超屌課程表</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="page-scroll">
                        <a href="~/JobArea/HomePage/Index" style="color:white">首頁</a>
                    </li>
                    <li class="page-scroll">
                        <a href="~/JobArea/Home/Index" style="color:white">介面瀏覽</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#portfolio" style="color:white">模塊</a>
                    </li>
                    <li class="page-scroll">
                        <a href="~/JobArea/Job/Index" style="color:white">工作管理</a>
                    </li>
                    <li class="page-scroll">
                        <a href="~/JobArea/Employer/Index" style="color:white">廠商管理</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#about" style="color:white">關於</a>
                    </li>
                    <li>
                        @{
                            if (Request.Cookies["name"] == null)
                            {
                                @Html.ActionLink("註冊", "Insert", "Employer", null, new { @class = "glyphicon glyphicon-user", style = "color:white" });
                            }
                            else
                            {
                                <span style="color:white" class="glyphicon glyphicon-user">
                                    @Html.ActionLink(HttpUtility.UrlDecode(Request.Cookies["name"].Value), "Index", "Manager", new { Area = "JobArea", id = Request.Cookies["nameID"].Value }, new { style = "color:white" })
                                </span>

                            }

                        }

                    </li>
                    <li class="page-scroll">
                        @{
                            if (Request.Cookies["name"] == null)
                            {
                                @Html.ActionLink("廠商登入", "Login", "Employer", null, new { @class = "glyphicon glyphicon-user", style = "color:white" });
                            }
                            else
                            {
                                @Html.ActionLink(" 登出", "Logout", "Employer", null, new { style = "color:white" });
                            }
                        }
                    </li>
                    <li class="page-scroll">
                        <a href="#contact" style="color:white">聯絡我們</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <section id="">
        <div id="adarea">
            <img id="ad" src="~/Areas/JobArea/Image/PartTimeJob.jpg" style="width:500px" />
        </div>
        <div class="container">
            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer id="footer1" class="text-center" style="z-index:999">
        <div class="panel-footer" style="height:60px;background-color:#2c3e50">
            <div class="container">
                <div class="row" style="margin-top:8px">
                    <div class="col-lg-12" style="color:white">
                        Copyright &copy; 超屌課程表 2016
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-freelancer/3.3.7/js/freelancer.min.js"></script>*@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    @RenderSection("scripts", false)
</body>
</html>